#Fetching the latest verison of java
FROM openjdk:20

#setting the work director
WORKDIR /target

#copy the jar file into our target 
COPY ./student-management-system-0.0.1-SNAPSHOT.jar /target

#Expose port 8080
EXPOSE 8080

#Starting the application
CMD ["java", "-jar", "student-management-system-0.0.1-SNAPSHOT.jar"]